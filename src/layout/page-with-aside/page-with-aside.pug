//- components
include ~@comp/header/header.pug

block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title #{title}
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content=`${title}`)
    meta(name="keywords", content=`${keywords}`)
    link(rel="icon", href="./favicon.png", type="image/png")
  body
    .page
      block header
        +header({addBtn: true })
      .page__content
        block content
          
      block footer
        include ~@comp/footer/footer.pug
