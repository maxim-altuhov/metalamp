//- components
include ~@comp/input/input.pug
include ~@comp/dropdown/dropdown.pug
//-
doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title UI Kit - Form Elements
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="UI Kit - Form Elements")
    meta(name="keywords", content="ui-kit, metalamp")
    link(rel="icon", href="./favicon.png", type="image/png")
  body
    .form-elements__header
      include ~@comp/logo/logo.pug
    .form-elements__container
      .form__item
        .form__tag Default
        +input({labelText:"text field", attributeName:"email", attributeType:"email", placeholder:"Email"})
      .form__item
        .form__tag Hover / Focus
        +input({labelText:"text field", attributeName:"text", attributeType:"text", placeholder:"Text", valueInInput:"This is pretty awesome"})
      .form__item
        +dropdown({labelText:"dropdown", textInInput:"Сколько гостей"}, elements="Взрослые", "Дети", "Младенцы")
      .form__item
        +input({labelText:"masked text field", attributeName:"date", attributeType:"text", placeholder:"ДД.ММ.ГГГГ", typeMask:"date"})
      .form__item
        +input({labelText:"date dropdown", attributeName:"date-range", attributeType:"text", placeholder:"ДД.ММ.ГГГГ", typeMask:"date", dateWithDropdown: true})