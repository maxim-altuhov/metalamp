include ~@comp/input/input.pug

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title UI Kit - Form Elements
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="UI Kit - Form Elements")
    meta(name="keywords", content="ui-kit, metalamp")
    link(rel="icon", href="/favicon.png", type="image/png")
  body
    include ~@comp/logo/logo.pug
    .container__form-elements
      .form__item
        .form__tag Default
        +input("Text Field", "email", "email", "Email")
      .form__item
        .form__tag Hover / Focus
        +input("Text Field", "text", "text", "Text", "This is pretty awesome")
      .form__item
        include ~@comp/dropdown/dropdown.pug