//- components
include ~@comp/header/header.pug
include ~@comp/footer-copyright/footer-copyright.pug

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title UI Kit - Headers & Footers
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="UI Kit - Headers & Footers")
    meta(name="keywords", content="ui-kit")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
    link(rel="apple-touch-icon" sizes="180x180" href="./assets/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./assets/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./assets/favicon-16x16.png")
    link(rel="manifest" href="./assets/site.webmanifest")
    link(rel="mask-icon" href="./assets/safari-pinned-tab.svg" color="#5bbad5")
  body
    .container
      include ~@comp/ui-header/ui-header.pug
    .ui-kit-header
      .ui-kit-header__elem
        +header({ showBlockWithBtn: true })
      .ui-kit-header__elem
        +header({ showBlockWithLogin: true })
    .ui-kit-footer
      .ui-kit-footer__elem
        include ~@comp/footer/footer.pug
      .ui-kit-footer__elem
        +footer-copyright({ 
          copyrightText: "Copyright © 2018 Toxin отель. Все права защищены.",
          isMiniVersion: true,
        })
      .ui-kit-footer__elem &nbsp;
