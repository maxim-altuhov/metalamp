//- components
include ~@comp/color/color.pug
//-
doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title UI Kit - Colors & Type
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="UI Kit - Colors & Type")
    meta(name="keywords", content="ui-kit, metalamp")
    link(rel="icon", href="./favicon.png", type="image/png")
  body
    .ui-header
      include ~@comp/logo/logo.pug
    .colors-type__container
      .colors__wrapper
        .colors__item
          +color({name:"Dark Shade 100%", hex:"#1F2041", color:"dark"})
        .colors__item
          +color({name:"Dark Shade 75%", hex:"#1F2041", color:"dark75"})
        .colors__item
          +color({name:"Dark Shade 50%", hex:"#1F2041", color:"dark50"})
        .colors__item
          +color({name:"Dark Shade 25%", hex:"#1F2041", color:"dark25"})
        .colors__item
          +color({name:"Dark Shade 5%", hex:"#1F2041", color:"dark5"})
        .colors__item
          +color({name:"Purple", hex:"#BC9CFF", color:"purple"})
        .colors__item
          +color({name:"Green", hex:"#6FCF97", color:"green"})
      .type__wrapper 
        h1.type__elem
          span H1
          | This one is the sub-section or widget title 
        h2.type__elem
          span H2
          | Next one is the item title inside widgets
        h3.type__elem
          span H3
          | This is a label or CTA text
        p.type__elem
          span Body
          | This is the body text which is used for most of the design, like paragraphs, lists, etc.
