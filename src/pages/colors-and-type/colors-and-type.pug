//- layout
extends ~@lo/ui-kit/ui-kit

//- components
include ~@comp/color/color.pug

block variables
  - const title = "UI Kit - Colors & Type"
  - const keywords = "ui-kit"

block content
  .colors-and-type
    .colors-and-type__wrapper
      .colors
        .colors__wrapper
          .colors__item
            +color({name:"Dark Shade 100%", hex:"#1F2041", color:"dark"})
          .colors__item
            +color({name:"Dark Shade 75%", hex:"#1F2041", color:"dark-shade75"})
          .colors__item
            +color({name:"Dark Shade 50%", hex:"#1F2041", color:"dark-shade50"})
          .colors__item
            +color({name:"Dark Shade 25%", hex:"#1F2041", color:"dark-shade25"})
          .colors__item
            +color({name:"Dark Shade 5%", hex:"#1F2041", color:"dark-shade5"})
          .colors__item
            +color({name:"Purple", hex:"#BC9CFF", color:"purple"})
          .colors__item
            +color({name:"Green", hex:"#6FCF97", color:"green"})
      .type
        .type__wrapper 
          h1.type__elem
            span H1
            | This one is the sub-section or widget title 
          h2.type__elem
            span H2
            | Next one is the item title inside widgets
          h3.type__elem
            span H3
            | This is a label or CTA text
          p.type__elem
            span Body
            | This is the body text which is used for most of the design, like paragraphs, lists, etc.
