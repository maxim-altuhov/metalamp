//- components
include ~@comp/input/input.pug
include ~@comp/dropdown/dropdown.pug
include ~@comp/button/button.pug

.card__block
  h1.card__title Найдём номера под ваши пожелания
  form(action="#", method="get", name="card-search")
    .card-search__wrapper
      .card-search__elem
        +input({labelText:"прибытие", labelTextSecond:"выезд", id:'card-search-date', attributeName:"card-search-date-range", attributeType:"text", placeholder:"ДД.ММ.ГГГГ", dateWithDropdown: true})
      .card-search__elem
        +dropdown({labelText:"гости", attributeName:"card-search-guests", textInInput:"Сколько гостей", addBtn: true, elements:{"Взрослые" : 0, "Дети" : 0, "Младенцы" : 0}})
    .card-search__btn 
      +button({mod:"big", text:"подобрать номер", btnType:"submit"})