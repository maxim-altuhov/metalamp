//- components
include ~@comp/button/button.pug

mixin header(options)
  - const { addBtn, addLogin } = options;
    header.header__block
      .container-content
        .menu__overlay.js-menu__overlay
        .header__wrapper
          a(class="header__logo" href="/")
            img(src=require("./img/logo-main.svg"), alt="logo")
          nav.header__navigation
            ul.header__menu.js-header__menu
              li.header__menu-link
                a(href="/address/change-me") О нас
              li.header__menu-link.header__menu-dropdown.js-header__menu-dropdown
                span
                  a(href="#!") Услуги
                  span.header__link-arrow.js-header__link-arrow.material-icons expand_more
                ul.header__submenu.js-header__submenu.header__submenu_hide
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка1
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка2
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка3
              li.header__menu-link
                a(href="/address/change-me") Вакансии
              li.header__menu-link
                a(href="/address/change-me") Новости
              li.header__menu-link.header__menu-dropdown.js-header__menu-dropdown
                span
                  a(href="#!") Соглашения
                  span.header__link-arrow.js-header__link-arrow.material-icons expand_more
                ul.header__submenu.js-header__submenu.header__submenu_hide
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка1
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка2
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка3
                  li.header__menu-link
                    a(href="/address/change-me") Ссылка4
          svg.ham.js-ham.hamRotate(viewBox="0 0 100 100" width="60")
            path.line.top(d="m 30,33 h 40 c 0,0 9.044436,-0.654587 9.044436,-8.508902 0,-7.854315 -8.024349,-11.958003 -14.89975,-10.85914 -6.875401,1.098863 -13.637059,4.171617 -13.637059,16.368042 v 40")
            path.line.middle(d="m 30,50 h 40")
            path.line.bottom(d="m 30,67 h 40 c 12.796276,0 15.357889,-11.717785 15.357889,-26.851538 0,-15.133752 -4.786586,-27.274118 -16.667516,-27.274118 -11.88093,0 -18.499247,6.994427 -18.435284,17.125656 l 0.252538,40")
          if addBtn
            .header__btn
              .header__btn-elem
                +button({mod:"transparent", text:"Войти", isLink: true, href: "/address/change-me"}, addclass="button_transparent-modif")
              .header__btn-elem
                +button({mod:"colored", text:"зарегистрироваться", isLink: true, href: "/address/change-me"}, addclass="button_mini")
          if addLogin
            a(class="header__login" href="/address/change-me") Юлий Цезарь