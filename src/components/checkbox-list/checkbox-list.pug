//- components
include ~@comp/checkbox/checkbox.pug
//-
  В данном миксине используется шрифт Material Icons, необходимо подключить данный шрифт в проект
  const options = {
    title: String,
    name: String,
    isOpen: Boolean,
    objWithElem: {
      String: Boolean,
    }
  };
mixin checkbox-list(options = {})
  - const { title = "", name = "", isOpen = false, objWithElem = {} } = options;
      .checkbox-list
        h3.checkbox-list__block.js-checkbox-list__block(tabindex="0")= title
          if isOpen === true
            span(class="checkbox-list__arrow") keyboard_arrow_up
          else
            span(class="checkbox-list__arrow") keyboard_arrow_down
        if isOpen === true
          .checkbox-list__wrapper.checkbox-list__wrapper_active
            each isChecked, element in objWithElem
              .checkbox-list__elem
                +checkbox({title:`${element}`, nameCheckbox:`${name}[]`, checked: isChecked})
        else
          .checkbox-list__wrapper(style={display: "none"})
            each isChecked, element in objWithElem
              .checkbox-list__elem
                +checkbox({title:`${element}`, nameCheckbox:`${name}[]`, checked: isChecked})