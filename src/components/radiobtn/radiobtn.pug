mixin radiobtn(options)
  - const { text, name, checked } = options;
      if checked
        .radiobtn__elem
          label
            input.radiobtn__field.visuallyhidden(type="radio", name=name, value=text, checked)
            span= text
      else
        .radiobtn__elem
          label
           input.radiobtn__field.visuallyhidden(type="radio", name=name, value=text)
           span= text